# ----- CONFIGURAZIONE APPLICAZIONE -----
NODE_ENV=production
APP_PORT=8655
APP_HOST=192.168.129.14

# Nome dell'applicazione
VITE_APP_NAME=Thematic Excel Lens

# URL dell'API (se presente)
VITE_API_URL=http://localhost:3001

# ----- CONFIGURAZIONE AI -----
# OpenRouter API Key (Gratuita)
# VITE_OPENROUTER_API_KEY=your-openrouter-key-here

# OpenAI API Key (A pagamento)  
# VITE_OPENAI_API_KEY=your-openai-key-here

# Configurazioni AI predefinite
VITE_DEFAULT_AI_PROVIDER=openrouter
VITE_DEFAULT_OPENROUTER_MODEL=deepseek/deepseek-chat-v3-0324:free
VITE_DEFAULT_OPENAI_MODEL=gpt-3.5-turbo
VITE_AI_ENABLED_DEFAULT=true

# ----- CONFIGURAZIONE FILE -----
# Dimensione massima file (in MB)
VITE_MAX_FILE_SIZE=50MB

# Tipi di file consentiti (separati da virgola)
VITE_ALLOWED_FILE_TYPES=xlsx,xls,csv

# ----- CONFIGURAZIONE FUNZIONALITÃ€ -----
# Abilita analytics
VITE_ENABLE_ANALYTICS=true

# Intervallo auto-salvataggio (in millisecondi)
VITE_AUTO_SAVE_INTERVAL=30000

# Numero massimo di progetti per utente
VITE_MAX_PROJECTS=10

# Numero massimo di etichette per progetto
VITE_MAX_LABELS=100

# ----- CONFIGURAZIONE REDIS -----
REDIS_PORT=6379
REDIS_PASSWORD=Clasimdansin2025!!

# ----- CONFIGURAZIONE VOLUMI -----
# Percorso per i dati persistenti dell'applicazione
DATA_PATH=./data

# Percorso per i dati Redis
REDIS_DATA_PATH=./redis-data

# ----- CONFIGURAZIONE LOGGING -----
# Livello di log (debug, info, warn, error)
LOG_LEVEL=info

# Percorso file di log
LOG_FILE=/app/logs/app.log

# ----- CONFIGURAZIONE BACKUP -----
# Intervallo backup in secondi (86400 = 24 ore)
BACKUP_INTERVAL=86400

# Numero di backup da mantenere
BACKUP_RETENTION=7

# ----- CONFIGURAZIONE SVILUPPO -----
# Porta per sviluppo locale
DEV_PORT=8081

# Livello di log
LOG_LEVEL=info

# Debug mode (true/false)
DEBUG=false

# ----- CONFIGURAZIONE SICUREZZA -----
# Chiave segreta per sessioni
SESSION_SECRET=your_very_secure_session_secret_here

# Durata sessione in millisecondi (7 giorni)
SESSION_DURATION=604800000

# CORS origins consentiti
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

